<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Jomres Popular hotels with images</name>
	<author>Vince Wooll</author>
	<creationDate>February 2008</creationDate>
	<copyright>(C) 2008 Vince Wooll</copyright>
	<license>http://www.jomres.net</license>
	<authorEmail>support@jomres.net</authorEmail>
	<authorUrl>http://www.jomres.net</authorUrl>
	<version>2</version>
	<description>Popular hotels</description>
	<files>
		<filename module="mod_jomres_pp">mod_jomres_pp2.php</filename>
		<filename module="mod_jomres_pp">mod_jomres_pp2.xml</filename>
	</files>
	<params>
		<param name="listlimit" type="text" default="5" label="Limit" description="Limit the number of popular properties to n number of propertys" />
		<param name="jomres_pop_from" type="text" default=" from " label="from" description="from" />
		<param name="vertical" type="radio" default="1" label="Display as vertical list" description="Show the list as vertical list">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>		
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
		<param name="imwidth" type="text" default="30" label="width" description="Image width" />
		<param name="imheight" type="text" default="30" label="hieght" description="Image height" />
	</params>
</install>