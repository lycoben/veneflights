			<option value="2">Anyone</option>
		</param>

		<param type="spacer" name="@spacer" />
		<param name="enable_recaptcha" type="radio" default="0" label="COMMENTS_SPAM_RECAPTCHA" description="COMMENTS_SPAM_RECAPTCHA_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="recaptcha_public" type="text" size="40" label="COMMENTS_SPAM_RECAPTCHA_PUBLIC" description="COMMENTS_SPAM_RECAPTCHA_PUBLIC_DESC" />
		<param name="recaptcha_private" type="text" size="40" label="COMMENTS_SPAM_RECAPTCHA_PRIVATE" description="COMMENTS_SPAM_RECAPTCHA_PRIVATE_DESC" />

		<param type="spacer" name="@spacer" />
		<param name="enable_akismet" type="radio" default="0" label="COMMENTS_SPAM_AKISMET" description="COMMENTS_SPAM_AKISMET_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="akismet_key" type="text" size="20" label="COMMENTS_SPAM_AKISMET_KEY" description="COMMENTS_SPAM_AKISMET_KEY_DESC" />
	</params>
</config>