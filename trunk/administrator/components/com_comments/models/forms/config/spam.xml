<config>
	<params>
		<param name="minlength" type="text" size="6" default="6" label="COMMENTS_COMMENT_MIN_LENGTH" description="COMMENTS_COMMENT_MIN_LENGTH_DESC" />
		<param name="maxlength" type="text" size="6" default="1024" label="COMMENTS_COMMENT_MAX_LENGTH" description="COMMENTS_COMMENT_MAX_LENGTH_DESC" />

		<param name="captcha" type="radio" default="1" label="COMMENTS_SPAM_CAPTCHA" description="COMMENTS_SPAM_CAPTCHA_DESC">
